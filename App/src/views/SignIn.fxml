<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignInController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color: eff7f6;" VBox.vgrow="ALWAYS">
            <children>
                <AnchorPane layoutX="416.0" prefHeight="400.0" prefWidth="225.0" style="-fx-background-color: f2b5d4;">
                    <children>
                        <Label layoutX="44.0" layoutY="81.0" text="Welcome Back!">
                            <font>
                                <Font name="Segoe Print" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <AnchorPane layoutX="-1.0" layoutY="-1.0" prefHeight="400.0" prefWidth="418.0" style="-fx-background-color: eff7f6;">
                    <children>
                        <Label layoutX="189.0" layoutY="87.0" text="Hello!">
                            <font>
                                <Font name="Segoe Print" size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="fieldEmail" layoutX="89.0" layoutY="137.0" prefHeight="26.0" prefWidth="250.0" promptText="Email">
                            <effect>
                                <DropShadow />
                            </effect>
                            <font>
                                <Font name="Segoe Print" size="12.0" />
                            </font>
                        </TextField>
                        <TextField fx:id="fieldPassword" layoutX="89.0" layoutY="185.0" prefHeight="26.0" prefWidth="250.0" promptText="Password">
                            <effect>
                                <DropShadow />
                            </effect>
                            <font>
                                <Font name="Segoe Script" size="12.0" />
                            </font>
                        </TextField>
                        <Button layoutX="125.0" layoutY="285.0" mnemonicParsing="false" onAction="#signIn" style="-fx-background-color: f2b5d4;" text="Sign In">
                            <font>
                                <Font name="Segoe Print" size="13.0" />
                            </font>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" />
                            </effect>
                        </Button>
                        <Hyperlink fx:id="linkToReturn" layoutX="214.0" layoutY="240.0" onAction="#changeToSignUp" text="I don't have an account yet">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Hyperlink>
                        <Button layoutX="239.0" layoutY="285.0" mnemonicParsing="false" onAction="#returnHome" style="-fx-background-color: f2b5d4;" text="Cancel">
                            <font>
                                <Font name="Segoe Print" size="13.0" />
                            </font>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" />
                            </effect>
                        </Button>
                  <Label fx:id="labelErrorMessage" layoutX="97.0" layoutY="222.0" textFill="#f2b5d4">
                     <font>
                        <Font name="Segoe Print" size="12.0" />
                     </font>
                  </Label>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</BorderPane>
